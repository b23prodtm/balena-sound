version: '2'
services:
  bluetooth-audio:
    build:
      context: ./bluetooth-audio
      dockerfile: Dockerfile.aarch64
    restart: always
    network_mode: host
    privileged: true
    labels:
      io.balena.features.dbus: 1
    volumes:
      - bluetoothcache:/var/cache/bluetooth
      - snapcast:/var/cache/snapcast
  airplay:
    build:
      context: ./airplay
      dockerfile: Dockerfile.aarch64
    restart: always
    network_mode: host
    privileged: true
    labels:
      io.balena.features.dbus: 1
    volumes:
      - snapcast:/var/cache/snapcast
  spotify:
    build:
      context: ./spotify
      dockerfile: Dockerfile.aarch64
    restart: always
    network_mode: host
    privileged: true
    volumes:
      - spotifycache:/var/cache/raspotify
      - snapcast:/var/cache/snapcast
  fleet-supervisor:
    build:
      context: ./fleet-supervisor
      dockerfile: Dockerfile.aarch64
    restart: on-failure
    network_mode: host
    privileged: true
    ports:
      - 3000:3000
    labels:
      io.balena.features.supervisor-api: 1
  snapcast-server:
    build:
      context: ./snapcast-server
      dockerfile: Dockerfile.aarch64
      args:
        SNAPCAST_VERSION: 0.17.1
    restart: on-failure
    ports:
      - 1704:1704
      - 1705:1705
    volumes:
      - snapcast:/var/cache/snapcast
  snapcast-client:
    build:
      context: ./snapcast-client
      dockerfile: Dockerfile.aarch64
      args:
        SNAPCAST_VERSION: 0.17.1
    restart: on-failure
    network_mode: host
    privileged: true
    volumes:
      - snapcast:/var/cache/snapcast
volumes:
  spotifycache:
  bluetoothcache:
  snapcast:
